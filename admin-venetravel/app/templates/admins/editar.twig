{% extends 'overall/layout' %}
{# Título de la página #}
{% block appTitle %}Administradores{% endblock %}

{# Contenido de la página #}
{% block appBody %}
    <div class="page">
	    <div class="page-header">
	      	<h1 class="page-title">Administradores </h1>
	      	<ol class="breadcrumb">
	        	<li class="breadcrumb-item"><a href="admins/">Administradores</a></li>
	        	<li class="breadcrumb-item active">Edición de un administrador</li>
	      	</ol>
	    </div>
	    <div class="page-content">
	      	<div class="panel panel-green">
		        <header class="panel-heading">
		          	<div class="panel-actions"></div>
		          	<h3 class="panel-title"><i class="fa fa-gears"></i> Editar Administrador</h3>
		        </header>
		        <div class="panel-body">
			        <form autocomplete="off" role="form" id="admins_form">
			        	<div class="row">

			        		<input type="hidden" name="id_user" id="id_user" value="{{ data.id_user }}">
			        		<div class="form-group col-xs-12 col-md-6">
		                        <label class="form-control-label" for="id_email">Email <span class="required">*</span></label>
		                        <input type="email" id="id_email" class="form-control" name="email" value="{{ data.email }}" placeholder="admin@venetravel.net" autocomplete="off">
		                        <span class="error-message" pm-name="email"></span>
		                    </div>

		                    <div class="form-group col-xs-12 col-md-6">
		                        <label class="form-control-label" for="id_pass">Contraseña </label>
		                        <input type="password" id="id_pass" class="form-control" name="pass" value="" placeholder="Ej: 1234567" autocomplete="off">
		                        <span class="text-help">Si no desea editar la contraseña dejar el campo en blanco</span>
		                        <span class="error-message" pm-name="pass"></span>
		                    </div>

		                    <div class="form-group col-12">
		                    	<button type="button" class="btn btn-primary" id="admins_btn"><i class="fa fa-check"></i> Editar</button>
		                    	<a href="dashboard/" class="btn btn-default">Cancelar</a>
		                    </div>
			        	</div>
				        
				    </form>
		        </div>
	      	</div>
	    </div>
	</div>
{% endblock %}

{# scripts extra #}
{% block appFooter %}
    <script src="./assets/jscontrollers/admins/editar.js"></script>
{% endblock %}


