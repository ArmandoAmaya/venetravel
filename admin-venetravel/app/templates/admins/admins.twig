{% extends 'overall/layout' %}
{# Título de la página #}
{% block appTitle %}Administradores{% endblock %}
{# Css Extra #}
{% block appHeader %}
<link rel="stylesheet" href="assets/theme/global/vendor/datatables-bootstrap/dataTables.bootstrap.css">
<link rel="stylesheet" href="assets/theme/global/vendor/datatables-responsive/dataTables.responsive.css">
<link rel="stylesheet" href="assets/theme/assets/examples/css/tables/datatable.css">
{% endblock %}

{# Contenido de la página #}
{% block appBody %}
    <div class="page">
	    <div class="page-header">
	      	<h1 class="page-title">Administradores </h1>
	      	<ol class="breadcrumb">
	        	<li class="breadcrumb-item"><a href="dashboard/">Escritorio</a></li>
	        	<li class="breadcrumb-item active">Gestion de Administradores</li>
	      	</ol>
	    </div>
	    <div class="page-content">
	      	<div class="panel panel-green">
		        <header class="panel-heading">
		          	<div class="panel-actions"></div>
		          	<h3 class="panel-title"><i class="fa fa-globe"></i> Listado de Administradores</h3>
		        </header>
		        <div class="panel-body">

			        <table class="table table-hover dataTable table-striped w-full" data-plugin="dataTable">
			            <thead>
				            <tr>
				                <th>Id</th>
				                <th>Email</th>
				                <th>Acciones</th>
				            </tr>
			            </thead>
			            <tbody>
			            	{% for d in data if false != data %}
			            	<tr>
				            	<td style="vertical-align:middle;width: 10%!important;">{{ d.id_user }}</td>
				                <td style="vertical-align:middle;">{{ d.email }}</td>
				                <td class="actions text-center" style="width: 10%!important;vertical-align:middle;">

				                  	<a href="admins/editar/{{ d.id_user }}" class="btn btn-sm btn-icon btn-pure btn-success on-default edit-row" data-toggle="tooltip" data-original-title="Editar"><i class="icon wb-edit" aria-hidden="true"></i></a>

				                    <a onclick="deleteElement('admins', '{{ d.id_user }}')" class="pointer btn btn-sm btn-icon btn-pure btn-danger on-default remove-row" data-toggle="tooltip" data-original-title="Eliminar"><i class="icon wb-trash" aria-hidden="true"></i></a>
				                </td>
			                </tr>
			            	{% endfor %}
			            	
			            </tbody>

			        </table>

			        <div class="col-xs-12 mt-10">
			            <a href="admins/crear/" class="btn btn-primary"><i class="md-plus"></i> Crear Nuevo</a>
			        </div>
		        </div>
	      	</div>
	    </div>
	</div>
{% endblock %}

{# scripts extra #}
{% block appFooter %}
    <script src="assets/theme/global/vendor/datatables/jquery.dataTables.js"></script>
	<script src="assets/theme/global/vendor/datatables-bootstrap/dataTables.bootstrap.js"></script>
	<script src="assets/theme/global/vendor/datatables-responsive/dataTables.responsive.js"></script>
	<script src="assets/theme/global/js/Plugin/datatables.js"></script>
	<script src="assets/theme/assets/examples/js/tables/datatable.js"></script>
{% endblock %}
